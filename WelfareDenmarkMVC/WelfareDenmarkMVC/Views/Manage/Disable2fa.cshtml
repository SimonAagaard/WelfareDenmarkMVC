@{
    ViewData["Title"] = "Disable two-factor authentication (2FA)";
    ViewData.AddActivePage(ManageNavPages.TwoFactorAuthentication);
}

<h2>@ViewData["Title"]</h2>

<div class="alert alert-warning" role="alert">
    <p>
        <span class="glyphicon glyphicon-warning-sign"></span>
        <strong>This action only disables 2FA.</strong>
    </p>
    <p>
        Deaktivering af 2FA ændrer ikke de nøgler, der bruges i autentificeringsapps. Hvis du ønsker at ændre nøglen
        bruges i en autentiseringsapp, du skal <a asp-action="ResetAuthenticatorWarning">nulstil din
             autentificeringsnøgler.
        </a>


    </p>
</div>

<div>
    <form asp-action="Disable2fa" method="post" class="form-group">
        <button class="btn btn-danger" type="submit">Deaktiver 2FA</button>
    </form>
</div>
