@model WelfareDenmarkMVC.Models.AccountViewModels.ChecklistViewModel

<h4>Huskeliste</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="ChecklistViewModels" asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ChecklistItem" class="control-label" title="Huskeliste">Lav indlæg til huskeliste:</label>
                <input asp-for="ChecklistItem" class="form-control" />
                <span asp-validation-for="ChecklistItem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Gem dette til min huskeliste" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Se min huskeliste", "Index", "ChecklistViewModels", new { }, new { })
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
