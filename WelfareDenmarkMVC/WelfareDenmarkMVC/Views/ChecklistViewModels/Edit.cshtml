@model WelfareDenmarkMVC.Models.AccountViewModels.ChecklistViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Redigér</h2>

<h4>Huskeliste</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ChecklistItem" class="control-label">Huskeliste indlæg:</label>
                <input asp-for="ChecklistItem" class="form-control" />
                <span asp-validation-for="ChecklistItem" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Gem" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Tilbage til huskeliste</a>
</div>

