@model WelfareDenmarkMVC.Models.AccountViewModels.ChecklistViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Huskeliste</h2>

<h4>ChecklistViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ChecklistItem" class="control-label">Gem til huskeliste</label>
                <input asp-for="ChecklistItem" class="form-control" />
                <span asp-validation-for="ChecklistItem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Gem dette til min huskeliste" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Tilbage til huskeliste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
