@model WelfareDenmarkMVC.Models.ContactListViewModel

@{
    ViewData["Title"] = "Delete";
}

<h3>
	Er du sikker på, at du vil slette kontaktpersonen @Html.DisplayFor(model => model.FullName)?
</h3>

<div>
    <hr />
    <dl class="">
        <dt>
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FullName)
        </dd><br />
        <dt>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ContactID" />
        <input type="submit" value="Slet" class="btn btn-default" /> |
        <a asp-action="Index">Tilbage til kontakter</a>
    </form>
</div>
